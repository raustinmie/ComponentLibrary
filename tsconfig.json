{
	"compilerOptions": {
		"target": "ES2017",
		"module": "ESNext",
		"lib": ["dom", "esnext"],
		"moduleResolution": "bundler",
		"allowSyntheticDefaultImports": true,
		"declaration": true,
		"declarationDir": "dist",
		"outDir": "dist",
		"jsx": "react-jsx",
		"esModuleInterop": true,
		"skipLibCheck": true,
		"strict": true,
		"rootDir": "src",
		"types": ["node", "react"]
	},
	"include": ["src"]
}
